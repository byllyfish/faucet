FROM ubuntu:16.04

RUN apt-key adv --keyserver keyserver.ubuntu.com --recv-keys FFBE06FBB4EDC679174DD2CCD5AA2ED445128570 \
    && echo "deb http://ppa.launchpad.net/byllyfish/oftr/ubuntu xenial main" >> /etc/apt/sources.list \
    && apt-get update && apt-get install -y --no-install-recommends \
        oftr \
        python3 \
        python3-pip \
        python3-setuptools \
        libpython3.5-dev \
        python3-numpy

RUN \
  apt-get update && \
  apt-get install -qy --no-install-recommends \
    curl \
    fping \
    gcc \
    git \
    influxdb \
    iperf \
    iputils-ping \
    ladvd \
    libpython2.7-dev \
    libyaml-dev \
    ndisc6 \
    net-tools \
    netcat-openbsd \
    psmisc \
    python-pip \
    sudo \
    tcpdump \
    vlan \
    wpasupplicant

RUN \
  git clone -b 2.2.2 --depth=1 https://github.com/mininet/mininet && \
  mininet/util/install.sh -nfv && \
  apt-get purge -qy pylint python-astroid

RUN pip3 install --upgrade setuptools wheel \
    && pip3 install networkx pyyaml aiohttp prometheus_client influxdb couchdb bitstring \
    && cd /root \
    && git clone https://github.com/byllyfish/zof.git \
    && git clone -b port5 --single-branch https://github.com/byllyfish/faucet.git \
    && cd zof \
    && python3 setup.py develop

RUN pip install --upgrade setuptools wheel \
    && pip install ipaddress pyyaml concurrencytest packaging netifaces requests scapy

CMD ["/root/faucet/docker/zof-runtests.sh"]
